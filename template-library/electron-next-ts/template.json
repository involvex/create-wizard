{
  "dependencies": {
    "electron": "^28.1.3",
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/react": "^18.2.47",
    "@types/node": "^20.11.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "scripts": {
    "dev": "concurrently \"npm:dev:next\" \"npm:dev:electron\"",
    "dev:next": "cd renderer && npm run dev",
    "dev:electron": "wait-on http://localhost:3000 && tsc -p electron && electron .",
    "build": "cd renderer && npm run build && tsc -p electron && electron-builder",
    "postinstall": "cd renderer && npm install"
  },
  "build": {
    "appId": "com.example.electron-next",
    "productName": "ElectronNextApp",
    "files": ["dist/electron/**/*", "renderer/out/**/*"],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
