{
  "name": "@involvex/create-wizard",
  "version": "0.0.3",
  "description": "create everything with ease interactive ",
  "keywords": [
    "cli",
    "create-apps",
    "npm"
  ],
  "homepage": "https://github.com/involvex/create-wizard#readme",
  "bugs": {
    "url": "https://github.com/involvex/create-wizard/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/involvex/create-wizard.git"
  },
  "license": "ISC",
  "author": "Involvex",
  "type": "module",
  "main": "scripts/create-app.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "test": "echo \"no tests\"",
    "format:check": "npx prettier --check .",
    "format": "npx prettier --write .",
    "lint": "npx eslint . --config eslint.config.js",
    "lint:fix": "npx eslint . --config eslint.config.js --fix",
    "check": "npm run lint:fix && npm run format",
    "build": "npx esbuild scripts/create-app.js --bundle --platform=node --target=node22 --format=esm --external:yoctocolors-cjs --external:mute-stream --external:safer-buffer --external:iconv-lite --external:cross-spawn --external:graceful-fs --external:fs-extra --external:inquirer --external:cli-progress --outfile=dist/create-wizard.mjs",
    "start": "node dist/create-wizard.mjs",
    "docs:start": "docusaurus start",
    "docs:build": "docusaurus build",
    "docs:serve": "docusaurus serve"
  },
  "bin": {
    "create-wizard": "dist/create-wizard.mjs"
  },
  "dependencies": {
    "cli-progress": "^3.12.0",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.2",
    "inquirer": "^12.9.6",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "@docusaurus/core": "^3.8.1",
    "@docusaurus/preset-classic": "^3.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^10.0.0",
    "@mdx-js/react": "^3.0.0",
    "conventional-changelog-cli": "^5.0.0",
    "ddc-copyright-head": "^1.4.0",
    "esbuild": "0.25.9",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-license-header": "^0.8.0",
    "eslint-plugin-markdownlint": "^0.9.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.6.2"
  }
}
